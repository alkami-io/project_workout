<div class="row wrapper border-bottom white-bg page-heading" style="margin-top: 50px;">
  <div class="col-lg-10">
    <h2>Profile 2</h2>
    <ol class="breadcrumb">
      <li class="active">
        <strong>Profile</strong>
      </li>
    </ol>
  </div>
  <div class="col-lg-2">

  </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">

  <div class="row m-b-lg m-t-lg">
    <div class="col-md-6">

      <div class="profile-image">
        <img src="<%= image_path('a4.jpg') %>" class="img-circle circle-border m-b-md" alt="profile">
      </div>
      <div class="profile-info">
        <div class="">
          <div>
            <h2 class="no-margins">
              <%= current_user.first_name %> <%= current_user.last_name %>
            </h2>
            <h4></h4>
            <small>
              When you want to succeed as bad as you want to breathe, then youâ€™ll be successful.
            </small>
          </div>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <%= link_to 'Create Routine', new_routine_path, class: 'btn btn-block btn-outline btn-primary' %>
      <%= link_to 'Add Exercise', new_exercise_path, class: 'btn btn-block btn-outline btn-success' %>
    </div>
    <div class="col-md-6"></div>

  </div>

  <div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
     <% @user.routines.each do |routine| %>
      <div class="col-md-3">
        <div class="ibox">
          <div class="ibox-content product-box">

            <div class="product-imitation">
              <%= routine.name %>
            </div>
            <div class="product-desc">
              <small class="text-muted"></small>
              <a href="#" class="product-name"> <%= routine.name %></a>

              <div class="m-t text-right">
                <%= link_to "View Routine <i class='fa fa-long-arrow-right'></i>".html_safe, routine_path(routine), class: 'btn btn-xs btn-outline btn-primary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
     <% end %>

    </div>
  </div>
</div>


<% content_for :javascript do %>

  <script type="text/javascript">


    $(function() {

      $("#sparkline1").sparkline([34, 43, 43, 35, 44, 32, 44, 48], {
        type: 'line',
        width: '100%',
        height: '50',
        lineColor: '#1ab394',
        fillColor: "transparent"
      });


    });

  </script>

<% end %>

